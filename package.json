{
  "name": "template",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "node ./scripts/copy-env.js && next dev",
    "build": "tsc --noEmit && next build",
    "start": "node ./scripts/copy-env.js && next start",
    "format": "prettier --write .",
    "lint": "tsc --noEmit && eslint . --ext .js,.jsx,.ts,.tsx && stylelint \"**/*.scss\"",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix && stylelint \"**/*.scss\" --fix",
    "test:unit": "jest",
    "test:e2e": "npx playwright test",
    "test:watch": "jest --watch",
    "prepare": "husky install",
    "create:element": "node ./scripts/elements/create.js",
    "lister:element": "node ./scripts/elements/lister.js",
    "remover:element": "node ./scripts/elements/remover.js"
  },
  "dependencies": {
    "@yandex/smart-captcha": "2.6.0",
    "axios": "^1.7.7",
    "next": "14.2.15",
    "react": "^18",
    "react-dom": "^18",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@gravity-ui/uikit": "^6.35.2",
    "@playwright/test": "^1.49.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@types/jest": "^29.4.0",
    "@types/node": "^20.17.6",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@typescript-eslint/eslint-plugin": "^8.8.1",
    "@typescript-eslint/parser": "^8.8.1",
    "dotenv": "^16.4.5",
    "eslint": "^8.57.1",
    "eslint-config-next": "14.2.15",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-react": "^7.37.1",
    "eslint-plugin-react-hooks": "^4.6.2",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^13.1.2",
    "prettier": "^3.3.3",
    "sass": "^1.79.4",
    "stylelint": "^16.9.0",
    "stylelint-config-prettier-scss": "^1.0.0",
    "stylelint-config-standard-scss": "^13.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --cache --fix",
    "*.scss": "stylelint --fix"
  }
}
